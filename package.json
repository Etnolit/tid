{
  "name": "tid",
  "version": "0.1.3",
  "description": "Timer",
  "main": "index.js",
  "repository": "https://github.com/Etnolit/tid",
  "author": "Linus TÃ¶rngren",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn webpack && yarn sass && yarn copy",
    "build:release": "yarn build && yarn package",
    "clean": "rm -r ./dist/*",
    "copy": "cp ./src/content/page.html ./dist && cp -R ./assets ./dist",
    "lint": "yarn lint:eslint && yarn lint:web-ext",
    "lint:eslint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:web-ext": "web-ext lint -s dist",
    "package": "yarn package:firefox && yarn package:chrome",
    "package:chrome": "cp ./src/manifest.chrome.json ./dist/manifest.json && (cd dist; zip -r - * >../artifacts/tid-$(awk -F'\"' '/\"version\": \".+\"/{ print $4; exit; }' ../package.json)-chrome.zip)",
    "package:firefox": "cp ./src/manifest.chrome.json ./dist/manifest.json && (cd dist; zip -r - * >../artifacts/tid-$(awk -F'\"' '/\"version\": \".+\"/{ print $4; exit; }' ../package.json)-firefox.zip)",
    "sass": "sass --no-source-map ./src/content:./dist/css",
    "sass:watch": "sass --watch --no-source-map ./src/content:./dist/css",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory=\"coverage\" --collectCoverageFrom=\"./src/**/*.ts\"",
    "test:watch": "jest --watch",
    "webpack": "webpack --config webpack.config.js",
    "webpack:watch": "webpack --watch --config webpack.config.js"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "css-loader": "^5.0.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-webextension-mock": "^3.7.7",
    "prettier": "^2.1.2",
    "sass": "^1.32.7",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.16",
    "typescript": "^4.1.3",
    "web-ext": "^5.5.0",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill-ts": "^0.25.0",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {}
}
