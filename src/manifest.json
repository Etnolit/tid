{
    "manifest_version": 2,
    "name": "Tid",
    "version": "0.1",
  
    "description": "Clock extension.",
    "homepage_url": "https://etnolit.se/tid",
    "icons": {
      "48": "assets/icons/alarm.svg",
      "96": "assets/icons/alarm.svg"
    },
  
    "background":
      {
          "scripts": ["js/background.js"]
      },
    
    "browser_action": {
      "default_icon": "assets/icons/alarm.svg"
    },

    "permissions": [
      "alarms",
      "notifications"
    ],

    "omnibox": {
      "keyword": "tid"
    }
}
